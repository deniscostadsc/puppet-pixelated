  {
    "description":"create an image with a working leap installation",

    "provisioners": [
      {
      "type": "file",
      "source": "bootstrap.sh",
      "destination": "/tmp/bootstrap.sh"
    },
    { 
      "type": "shell",
       "execute_command": "echo '{{user `ssh_password`}}' | sudo -S sh '{{ .Path }}'",
       "script": "bootstrap.sh"
    }
  ],

  "builders": [
    {
      "name": "leap-bootstrap-virtualbox",
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "noapic <wait>",
        "console=ttyS0 <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=example.wazokazi.is <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "vboxmanage_post": [
         ["modifyvm", "{{.Name}}", "--natpf1", "https,tcp,,3443,,443"],
         ["modifyvm", "{{.Name}}", "--natpf1", "ssh,tcp,,3022,,22"]
      ],
      "headless": true,
      "http_port_max": 9010,
      "http_port_min": 9001,
      "http_directory": "resources",
      "boot_wait": "5s",
      "ssh_password": "{{user `ssh_password`}}",
      "guest_os_type": "Debian_64",
      "guest_additions_mode": "disable",
      "vm_name": "leap",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "{{user `ssh_username`}}"
    },
    {
      "type": "qemu",
      "name": "leap-bootstrap-qemu",
      "qemuargs": [
        [
          "-serial",
          "file:/tmp/leap-install.log"
        ],
	[
	  "--no-reboot"
	]
      ],
      "accelerator": "kvm",
      "headless": true,
      "format": "qcow2",
      "ssh_password": "{{user `ssh_password`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_url": "{{user `iso_url`}}",
      "http_directory": "resources",
      "disk_size": 20140,
      "boot_wait": "8s",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "edd=off <wait>",
        "console=ttyS0 <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian-preseed.cfg <wait>",
        "debian-installer=en_US <wait>",
        "auto <wait>",
        "locale=en_US <wait>",
        "kbd-chooser/method=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=example.wazokazi.is <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "<enter><wait>"
      ],
      "ssh_port": 22,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_wait_timeout": "10000s",
      "vm_name": "leap",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "shutdown_command": "echo '{{user `ssh_password`}}' | /usr/bin/sudo -S /sbin/shutdown -h now"
    }
  ],

  "variables": {
    "iso_checksum_type": "md5",
    "iso_checksum": "8a3c2ad7fd7a9c4c7e9bcb5cae38c135",
    "iso_url": "http://cdimage.debian.org/debian-cd/7.6.0/amd64/iso-cd/debian-7.6.0-amd64-netinst.iso",
    "ssh_password": "provision",
    "ssh_username": "provision"
  }
}
